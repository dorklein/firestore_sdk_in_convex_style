{
  "name": "@smartbill/firestore-convex-style",
  "version": "0.1.0",
  "description": "A Convex-style SDK for Firestore with type-safe schemas and queries",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "firestore-convex": "./dist/cli/dev.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "codegen": "bun run ./src/cli/dev.ts",
    "codegen:watch": "bun run ./src/cli/dev.ts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit/",
    "test:integration": "vitest run tests/integration/",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:run": "./scripts/run-e2e-tests.sh",
    "emulator:start": "firebase emulators:start --only firestore",
    "emulator:exec": "firebase emulators:exec --only firestore",
    "prepublishOnly": "pnpm run build && pnpm test",
    "publish:jsr": "pnpm dlx jsr publish"
  },
  "keywords": [
    "firestore",
    "convex",
    "typescript",
    "schema",
    "validation",
    "type-safe",
    "firebase",
    "database",
    "orm"
  ],
  "author": "SmartBill",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/smartbill/firestore-convex-style.git"
  },
  "bugs": {
    "url": "https://github.com/smartbill/firestore-convex-style/issues"
  },
  "homepage": "https://github.com/smartbill/firestore-convex-style#readme",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "valibot": "^0.42.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.3.0",
    "firebase-tools": "^13.0.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.3.0"
  },
  "peerDependencies": {
    "firebase-admin": "^11.0.0 || ^12.0.0"
  }
}
