{
  "$schema": "https://jsr.io/schema/config-file.v1.json",
  "name": "@smartbill/firestore-convex-style",
  "version": "0.1.26",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts",
    "./server": "./server/mod.ts",
    "./values": "./values/mod.ts",
    "./bin/dev": "./bin/dev.js",
    "./dist/cli/dev.js": "./dist/cli/dev.js"
  },
  "publish": {
    "include": [
      "mod.ts",
      "server/mod.ts",
      "values/mod.ts",
      "src/**/*.ts",
      "bin/**/*.js",
      "dist",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/**/*",
      "**/*.test.ts",
      "**/*.spec.ts"
    ]
  }
}

